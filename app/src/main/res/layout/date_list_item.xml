<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_common_10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorDateListTime"
            android:paddingBottom="@dimen/padding_common_8"
            android:paddingLeft="@dimen/padding_common_14"
            android:paddingRight="@dimen/padding_common_14"
            android:paddingTop="@dimen/padding_common_8"
            android:text="07:00 am"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_common_14"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_common_14"
        android:paddingTop="@dimen/padding_common_14"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Cycle + TRX - Beginner"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_common_18"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="with james MacMann"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_common_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tu Th @ 7:40 pm (50 min)"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_common_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" in "
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_common_14" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Group Excersise Studio"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_common_14"
                android:textStyle="bold"
                android:paddingLeft="@dimen/padding_common_8"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>