<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_common_20"
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_common_5"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:id="@+id/callNumer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_common_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOWNTOWN"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_common_18"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/nember1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_common_10"
                android:text="+12175449846"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_common_18" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
        <LinearLayout
            android:id="@+id/callNumer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_common_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KERASOTES"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_common_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nember2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_common_10"
                android:text="+12176791625"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_common_18" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>