<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_common_10"
    android:layout_marginRight="@dimen/margin_common_10"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/traineeImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/user_img_default" />

            <com.ymca.CustomFont.PrimaryFontText
                android:id="@+id/traineeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/colorTransParent"
                android:gravity="center"
                android:padding="@dimen/padding_common_5"
                android:text="Suzy"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_common_16"
                app:fontName="@string/custom_primary_font" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <!--</LinearLayout>-->
</LinearLayout>