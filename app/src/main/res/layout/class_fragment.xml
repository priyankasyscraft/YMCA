<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.example.ymca.CustomFont.PrimaryFontText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_common_10"
        android:text="@string/classes"
        android:textAllCaps="true"
        android:textColor="@color/colorScheduleBottomUnSelect"
        android:textSize="@dimen/margin_common_25"
        android:textStyle="bold"
        app:fontName="@string/custom_primary_font"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.ymca.CustomFont.PrimaryFontText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no_record"
            android:textSize="@dimen/text_size_common_25"
            android:textStyle="bold"
            app:fontName="@string/custom_primary_font"/>

        <com.example.ymca.PullListLoader.XListView
            android:id="@+id/classScheduleListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:smoothScrollbar="true" />
    </RelativeLayout>
</LinearLayout>