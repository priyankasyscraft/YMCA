<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_common_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGray"
        android:orientation="vertical"
        android:padding="@dimen/padding_common_20"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/name"
            android:textColor="@color/colorTextGray"
            android:textSize="@dimen/text_size_common_16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/padding_common_20"
            android:background="@android:color/white" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_common_5"
            android:text="Anna Wright"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_common_18"
            android:textStyle="bold"
            android:id="@+id/nameMyCard"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/code"
            android:textColor="@color/colorTextGray"
            android:textSize="@dimen/text_size_common_16"
            android:paddingTop="@dimen/padding_common_20"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/padding_common_20"
            android:background="@android:color/white" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_common_5"
            android:text="123456789012"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_common_18"
            android:textStyle="bold"
            android:maxLength="12"
            android:inputType="number"
            android:id="@+id/numberMyCard"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".8"
            android:layout_marginTop="@dimen/margin_common_18"
            android:background="@android:color/white"
            android:weightSum="1"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".15"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".6"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/barCodeImg"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:text="123456789"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="@dimen/text_size_common_18"
                android:textStyle="bold"
                android:id="@+id/barCodeNumber"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:weightSum="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_common_10">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="@string/update_card"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/card_button_border"
                android:textSize="@dimen/text_size_common_16"
                android:id="@+id/updateCardButton"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>