<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/classes_bg"
    android:orientation="horizontal"
    android:layout_margin="@dimen/margin_common_5">

    <com.ymca.CustomFont.PrimaryFontText
        android:id="@+id/campCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bt_left"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_common_5"
        android:text="01"
        android:textColor="@color/colorScheduleBottomUnSelect"
        android:textSize="@dimen/text_size_common_25"
        android:textStyle="bold"
        app:fontName="@string/custom_primary_font" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_common_8">

        <com.ymca.CustomFont.PrimaryFontText
            android:id="@+id/campName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_common_5"
            android:text="Summer Camp"
            android:textAllCaps="true"
            android:textColor="@color/colorScheduleBottomUnSelect"
            android:textSize="@dimen/text_size_common_16"
            android:textStyle="bold"
            app:fontName="@string/custom_primary_font" />

        <com.ymca.CustomFont.PrimaryFontText
            android:id="@+id/campAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_common_5"
            android:text="Summer Camp"
            android:textColor="@color/colorTextGreeen"
            android:textSize="@dimen/text_size_common_14"
            app:fontName="@string/custom_primary_font" />

        <com.ymca.CustomFont.PrimaryFontText
            android:id="@+id/campMoreInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/padding_common_5"
            android:text="More Info"
            android:gravity="end|bottom"
            android:textColor="@color/colorTextGreeen"
            android:textSize="@dimen/text_size_common_12"
            app:fontName="@string/custom_primary_font" />
    </LinearLayout>

</LinearLayout>